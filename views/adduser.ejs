<%- include('header') %>
<link rel="stylesheet" href="/css/mobileStyling.css" media="only screen and (max-width: 679px)">
<link rel="stylesheet" href="/css/formMobileStyling.css" media="only screen and (max-width: 679px)">
<link rel="stylesheet" href="/css/desktopStyling.css" media="only screen and (min-width: 680px)">
<link rel="stylesheet" href="/css/formDesktopStyling.css" media="only screen and (min-width: 680px)">

<body>
  <div class="formPosition">
    <h1>Add New User</h1>
    <div class="userForm">
        <form action="/addUser" method="post">
        <label for="username">UserName:</label><br>
        <input type="text" id="username" placeholder="Enter User Name" name="username" required><br>
        <label for="fname">First name:</label><br>
        <input type="text" id="fname" placeholder="Enter First Name" name="fname" required><br>
        <label for="lname">Last name:</label><br>
        <input type="text" id="lname" placeholder="Enter Last Name" name="lname" required><br>
        <label for="email">E-Mail:</label><br>
        <input type="text" id="email" placeholder="Enter E-Mail" name="email" required><br>
        <label for="pwd">Password:</label><br>
        <input type="password" id="pwd" placeholder="Create A Password" name="pwd" required><br>
        <label for="pwd">Confirm Password:</label><br>
        <input type="password" id="pwd" placeholder="Confirm Password" name="pwdConf" required><br><br>
        <label for="role"> User Role:</label><br>
        <select name="role" id="role">
          <option value="Admin">Administrator</option>
          <option value="Director">Director</option>
          <option value="Accountant">Accountant</option>
          <option value="HLM User">HLM User</option>
        </select>
        <br><br>
        <input type="submit" value="Submit">

          <%if (locals.errorMessage){ %>
            <%= errorMessage %>
          <% } %>       
          </form>
      </div>

  </div>
    
</body>

<%- include('footer') %>
